<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background"
    android:orientation="vertical"
    tools:context=".ReceptionistHomePage">

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="162dp"
        android:layout_below="@+id/tvWelcome"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="40dp"
        android:backgroundTint="@color/white"
        android:onClick="manageRequests"
        android:text="@string/receptionestHomePage_manageServicesText"
        android:textColor="@color/color_buttonBlue"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="149dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="150dp"
        android:layout_height="163dp"
        android:layout_below="@+id/button"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="40dp"
        android:backgroundTint="@color/white"
        android:onClick="logout"
        android:text="@string/receptionestHomePage_logoutText"
        android:textColor="@color/color_buttonBlue"
        tools:layout_editor_absoluteX="211dp"
        tools:layout_editor_absoluteY="357dp" />

    <Button
        android:id="@+id/button5"
        android:layout_width="150dp"
        android:layout_height="163dp"
        android:layout_below="@+id/button"
        android:layout_alignParentStart="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="25dp"
        android:backgroundTint="@color/white"
        android:onClick="changePassword"
        android:text="change password"
        android:textColor="@color/color_buttonBlue"
        tools:layout_editor_absoluteX="26dp"
        tools:layout_editor_absoluteY="348dp" />

    <TextView
        android:id="@+id/tvWelcome"
        android:layout_width="412dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="-8dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="8dp"
        android:gravity="center_horizontal"
        android:text="@string/receptionestHomePage_welcomeText"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="38dp"
        tools:layout_editor_absoluteY="50dp" />
</RelativeLayout>