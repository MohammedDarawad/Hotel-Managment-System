<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_reception"
    android:layout_width="match_parent"
    android:layout_height="158dp"
    android:layout_margin="20dp"
    card_view:cardCornerRadius="25dp"
    card_view:cardElevation="2dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="158dp"
        android:background="@drawable/light_gray_background">

        <TextView
            android:id="@+id/txtServiceInfo"
            android:layout_width="351dp"
            android:layout_height="101dp"
            android:layout_margin="2dp"
            android:layout_marginTop="4dp"
            android:textSize="20sp"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="16dp"
            android:text="Expulsion"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/txtServiceInfo" />

        <TextView
            android:id="@+id/txtDrop"
            android:layout_width="115dp"
            android:layout_height="29dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:text="Expulsioned"
            android:textColor="#FF0000"
            android:textSize="20sp"
            android:visibility="gone"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/txtServiceInfo" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>