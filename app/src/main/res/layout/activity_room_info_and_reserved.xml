<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RoomInfoAndReserved"
    android:orientation="vertical"
    android:background="@drawable/background">

    <EditText
        android:id="@+id/Room_Info"
        android:layout_width="match_parent"
        android:layout_height="214dp"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:hint="Room Information"
        android:inputType="text|textMultiLine"
        android:shadowColor="#FFFFFF"
        android:textColor="#020000" />

    <EditText
        android:id="@+id/first_Date"
        android:layout_width="208dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginRight="50dp"
        android:gravity="center"
        android:hint="Start Date"
        android:inputType="text|textMultiLine"
        android:shadowColor="#FFFFFF"
        android:textColor="#020000" />


    <EditText
        android:id="@+id/Last_Date"
        android:layout_width="211dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginRight="50dp"
        android:gravity="center"
        android:hint="Last Date"
        android:inputType="text|textMultiLine"
        android:shadowColor="#FFFFFF"

        android:textColor="#020000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="60dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/ShowImage"
                android:text="Show Image For Room"
                android:textColor="#FFFFFF"
                android:layout_width="150dp"
                android:layout_height="69dp"
                android:layout_marginLeft="20dp"
                android:background="@android:color/black"
                android:layout_marginTop="30dp"
                android:onClick="ShowImageRoom"/>

            <Button
                android:id="@+id/ReserveRoom"
                android:text="Reserved Room"
                android:textColor="#FFFFFF"
                android:layout_width="150dp"
                android:layout_height="69dp"
                android:layout_marginLeft="20dp"

                android:background="@android:color/black"
                android:layout_marginTop="30dp"
                android:onClick="reservedRoom"/>
        </LinearLayout>



</LinearLayout>