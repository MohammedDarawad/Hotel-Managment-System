<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view_room_manager"
    android:layout_width="match_parent"
    android:layout_height="215dp"
    android:layout_margin="20dp"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="2dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/light_gray_background">

        <ImageView
            android:id="@+id/firstRomeImage"
            android:layout_width="0dp"
            android:layout_height="118dp"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:srcCompat="@android:drawable/alert_dark_frame" />

        <TextView
            android:id="@+id/txtFirstRoomInfoo"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:background="@color/white"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/firstRomeImage" />

        <Button
            android:id="@+id/btnMoreInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="16dp"
            android:backgroundTint="#A56C6C"
            android:shadowColor="@color/white"
            android:shadowRadius="10"
            android:text="More Info"
            android:textSize="18dp"
            android:textStyle="italic"
            card_view:cornerRadius="15dp"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/txtFirstRoomInfoo" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>